<h2>View all patients info and further search by selected parameter:</h2>
<div class="clear"></div>
<br/>
<%= form_tag show_all_patient_path, :method => 'get' do %>
<table>
  <tr width="20%"></tr>
  <tr width="60%">
   <input type="text" id="search" name="search" class="tbox" style="width:183px;float:left;margin-top:18px"/><br/>

   <select class="tbox dropdown_list" class="tbox" name="dropdown" id="dropdown" style="width: 183px;margin-left: 5px">
   <option value="name">Name</option>
   <option value="age">Age</option>
   <option value="sex">Sex</option>
   <option value="email">Email</option>
   <option value="land_line">Land Line Number</option>
   <option value="mobile">Mobile</option>
   <option value="location">Location</option>
   <option value="created_by">Created by</option>
   <option value="created_at">By Created Date</option>
   </select>
 </tr>
  <tr width="20%">
     <%= submit_tag "Search" %>
  </tr>
</table>
<%end%>


<div class="clear"></div>
<%if @patient_master.size== 0%>
<h4>NO RECORDS FOUND</h4>
<br/>
<%else%>
<%= render :partial => 'patient_master_details', :object => @patient_master %>
<%end%>