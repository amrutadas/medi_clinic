<div style="margin-left:10px"><h2 style="margin-right:15px">Forgot your password?</h2>
<div class="clear"></div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, :style =>"margin:5px" %><br />
  <%= f.email_field :email, :autofocus => true, :style =>"margin:5px"%></div>

  <div style="margin:10px"><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>